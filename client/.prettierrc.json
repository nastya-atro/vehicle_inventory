{
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "printWidth": 120
      }
    },
    {
      "files": ["*.ts", "*.js"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "trailingComma": "es5",
        "bracketSameLine": true,
        "printWidth": 120
      }
    }
  ]
}
